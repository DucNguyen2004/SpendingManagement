@page
@model AddTransactionModel

<div class="container p-3">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center">
        <a asp-page="/Transactions" class="text-primary">Cancel</a>
        <h5 class="m-0">Add Transaction</h5>
    </div>

    <!-- Transaction Form -->
    <div class="mt-3 p-3 bg-white shadow-sm rounded">
        <!-- Wallet Selection -->
        <div class="mt-3">
            <label class="form-label">Wallet</label>
            <select class="form-select">
                <option selected>Select Wallet</option>
                <option value="1">Wallet 1</option>
                <option value="2">Wallet 2</option>
                <option value="3">Wallet 3</option>
            </select>
        </div>

        <!-- Amount Input -->
        <div class="mt-3">
            <label class="form-label">Amount</label>
            <div class="input-group">
                <span class="input-group-text">VND</span>
                <input type="number" class="form-control" placeholder="0">
            </div>
        </div>

        <!-- Category Selection -->
        <div class="mt-3">
            <label class="form-label">Category</label>
            <select class="form-select">
                <option selected>Select Category</option>
                <option value="1">Food</option>
                <option value="2">Shopping</option>
                <option value="3">Transport</option>
            </select>
        </div>

        <!-- Note -->
        <div class="mt-3">
            <label class="form-label">Note</label>
            <input type="text" class="form-control" placeholder="Add a note">
        </div>

        <!-- Date Selection -->
        <div class="mt-3">
            <label class="form-label">Date</label>
            <input type="date" class="form-control">
        </div>
    </div>


    <!-- Save Button -->
    <div class="mt-3 text-center">
        <button class="btn btn-secondary w-100" disabled>Save</button>
    </div>
</div>
