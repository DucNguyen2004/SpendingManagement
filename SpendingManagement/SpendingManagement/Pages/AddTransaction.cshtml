@page
@model AddTransactionModel
@{
    ViewData["Title"] = "Add Transaction";
}

<div class="container p-3">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center">
        <a asp-page="/Transactions" class="text-primary">Cancel</a>
        <h5 class="m-0">Add Transaction</h5>
    </div>

    <!-- Transaction Form -->
    <form method="post">
        <div class="mt-3 p-3 bg-white shadow-sm rounded">
            <!-- Wallet Selection -->
            <div class="mt-3">
                <label class="form-label">Wallet</label>
                <select class="form-select" asp-for="Transaction.WalletId" required>
                    <option value="">Select Wallet</option>
                    @foreach (var wallet in Model.Wallets)
                    {
                        <option value="@wallet.Id">@wallet.Name</option>
                    }
                </select>
                <span asp-validation-for="Transaction.WalletId" class="text-danger"></span>
            </div>

            <!-- Amount Input -->
            <div class="mt-3">
                <label class="form-label">Amount</label>
                <div class="input-group">
                    <span class="input-group-text">VND</span>
                    <input type="number" class="form-control" asp-for="Transaction.Amount" placeholder="0" required>
                </div>
                <span asp-validation-for="Transaction.Amount" class="text-danger"></span>
            </div>

            <!-- Category Selection -->
            <div class="mt-3">
                <label class="form-label">Category</label>
                <select class="form-select" asp-for="Transaction.CategoryId" required>
                    <option value="">Select Category</option>

                    <optgroup label="Income">
                        @foreach (var category in Model.IncomeCategories)
                        {
                            <option value="@category.Id">@category.Name</option>
                        }
                    </optgroup>

                    <optgroup label="Expense">
                        @foreach (var category in Model.ExpenseCategories)
                        {
                            <option value="@category.Id">@category.Name</option>
                        }
                    </optgroup>
                </select>
                <span asp-validation-for="Transaction.CategoryId" class="text-danger"></span>
            </div>

            <!-- Note -->
            <div class="mt-3">
                <label class="form-label">Note</label>
                <input type="text" class="form-control" asp-for="Transaction.Note" placeholder="Add a note">
            </div>

            <!-- Date Selection -->
            <div class="mt-3">
                <label class="form-label">Date</label>
                <input type="date" class="form-control" asp-for="Transaction.Date" required>
                <span asp-validation-for="Transaction.Date" class="text-danger"></span>
            </div>

            <!-- Save Button -->
            <div class="mt-3 text-center">
                <button type="submit" class="btn btn-primary w-100">Save</button>
            </div>
        </div>
    </form>
</div>
