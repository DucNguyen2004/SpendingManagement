@page
@model SpendingManagement.Pages.DetailExpensesModel
@{
}
<div class="d-flex justify-content-between align-items-center mt-3">
    <h2>Expense Details</h2>
    <div class="dropdown mt-3 text-end">
        <button class="btn btn-light dropdown-toggle" type="button" id="filterMenu" data-bs-toggle="dropdown" aria-expanded="false">
            Filter
        </button>
        <ul class="dropdown-menu" aria-labelledby="filterMenu">
            <li><a class="dropdown-item" href="#">Day</a></li>
            <li><a class="dropdown-item" href="#">Week</a></li>
            <li><a class="dropdown-item" href="#">Month</a></li>
            <li><a class="dropdown-item" href="#">Quarter</a></li>
            <li><a class="dropdown-item" href="#">Year</a></li>
            <li><a class="dropdown-item" href="#">All</a></li>
            <li><a class="dropdown-item" href="#">Custom</a></li>
        </ul>
    </div>
</div>
<!-- Tabs for Filtering -->
<ul class="nav nav-tabs mt-3">
    <li class="nav-item">
        <a class="nav-link" href="#">Last Month</a>
    </li>
    <li class="nav-item">
        <a class="nav-link active" href="#">This Month</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="#">Future</a>
    </li>
</ul>
<div class="d-flex justify-content-around">
    <h5 class="text-danger">Total Expenses: 1,645,000.00 đ</h5>
    <h5 class="text-danger">Daily Average: 1,645,000.00 đ</h5>

</div>

<div class="mt-3 p-3 bg-white shadow-sm rounded">
    <div class="d-flex">
        <canvas id="expenseChart" style="max-width: 60%;"></canvas>
        <div class="ml-3">
            <p><span class="badge bg-danger">67%</span> Food</p>
            <p><span class="badge bg-info">12%</span> Shopping</p>
            <p><span class="badge bg-success">13%</span> Transport</p>
        </div>
    </div>
</div>
<!-- Expense Details -->
<div class="mt-3 p-3 bg-white shadow-sm rounded">
    <h5>Expense Details</h5>
    <ul class="list-group">
        <li class="list-group-item d-flex justify-content-between align-items-center">
            <div>
                <img src="food-icon.png" alt="Food" class="mr-2" width="24"> Food & Beverage
            </div>
            <span class="text-danger">205,000.00 đ</span>
        </li>
        <li class="list-group-item d-flex justify-content-between align-items-center">
            <div>
                <img src="shopping-icon.png" alt="Shopping" class="mr-2" width="24"> Shopping
            </div>
            <span class="text-danger">1,100,000.00 đ</span>
        </li>
        <li class="list-group-item d-flex justify-content-between align-items-center">
            <div>
                <img src="family-icon.png" alt="Family" class="mr-2" width="24"> Family
            </div>
            <span class="text-danger">200,000.00 đ</span>
        </li>
        <li class="list-group-item d-flex justify-content-between align-items-center">
            <div>
                <img src="bills-icon.png" alt="Bills" class="mr-2" width="24"> Bills & Utilities
            </div>
            <span class="text-danger">100,000.00 đ</span>
        </li>
    </ul>
</div>
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<script>
    const ctx2 = document.getElementById('expenseChart').getContext('2d');
        new Chart(ctx2, {
            type: 'doughnut',
            data: {
                labels: ['Food', 'Shopping', 'Transport'],
                datasets: [{
                    data: [8, 12, 67],
                    backgroundColor: ['#dc3545', '#17a2b8', '#28a745']
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        display: false // Hide default legend
                    }
                }
            }
        });
</script>