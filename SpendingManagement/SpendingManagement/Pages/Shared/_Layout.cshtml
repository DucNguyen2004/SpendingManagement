<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SpendingManagement</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SpendingManagement.styles.css" asp-append-version="true" />
</head>
<body>
    <!-- Sidebar Navigation -->
    <div class="sidebar">
        <div class="text-center mb-4">
            <h4>SpendingManagement</h4>
        </div>
        <ul class="nav flex-column">
            <li class="nav-item">
                <a class="nav-link" asp-area="" asp-page="/Index">🏠 Home</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-area="" asp-page="/Transactions">📋 Transactions</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-area="" asp-page="/Profile">👤 Account</a>
            </li>
        </ul>
        <!-- Add Transaction Button inside Sidebar -->
        <div class="text-center mt-4">
            <a asp-page="/AddTransaction" class="btn btn-primary w-75 text-white text-decoration-none">➕ Add Transaction</a>
        </div>
    </div>
    <div class="content">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

  

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>