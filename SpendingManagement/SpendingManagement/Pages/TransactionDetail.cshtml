@page
@model SpendingManagement.Pages.TransactionDetailModel
@{
}

<div class="container p-3">
    <!-- Back Button -->
    <div class="d-flex justify-content-between align-items-center">
        <a asp-page="/Transactions" class="text-primary">← Transactions</a>
        <a href="#" class="text-primary">Edit</a>
    </div>

    <!-- Edit Button -->
    <button class="btn btn-primary w-100 mt-2" data-bs-toggle="modal" data-bs-target="#editTransactionModal">✏ Edit Transaction</button>

    <!-- Include the Edit Transaction Modal -->
    <partial name="EditTransactionModal" />


    <!-- Transaction Card -->
    <div class="mt-3 p-3 bg-white shadow-sm rounded">
        <div class="d-flex align-items-center">
            <img src="~/images/icons/food.png" alt="Category Icon" width="40" class="me-2">
            <h5 class="m-0">@Model.Transaction.Category</h5>
        </div>
        <h2 class="text-danger mt-2">@Model.Transaction.Amount.ToString("N2") VND</h2>
        
        <div class="d-flex align-items-center mt-2">
            <i class="bi bi-calendar me-2"></i>
            <span>@Model.Transaction.Date.ToString("dddd, dd MMMM yyyy")</span>
        </div>
        
        <div class="d-flex align-items-center mt-2">
            <i class="bi bi-wallet2 me-2"></i>
            @* <span>@Model.Transaction.Wallet.Name</span> *@
        </div>
    </div>

    <!-- Actions -->
    <div class="mt-3 text-center">
        <button class="btn btn-outline-success w-100" asp-page-handler="Duplicate">📝 Duplicate</button>
        <button class="btn btn-outline-danger w-100 mt-2" data-bs-toggle="modal" data-bs-target="#deleteModal">🗑 Delete transaction</button>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Delete Transaction</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this transaction?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form method="post">
                    <button type="submit" asp-page-handler="Delete" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Edit Transaction Modal -->
<div class="modal fade" id="editTransactionModal" tabindex="-1" aria-labelledby="editTransactionModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editTransactionModalLabel">Edit Transaction</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <form method="post">
                <div class="modal-body">
                    <input type="hidden" asp-for="Transaction.Id" />
                    <input type="hidden" asp-for="Transaction.WalletId" />

                    <!-- Wallet Selection -->
                    <div class="mb-3">
                        <label class="form-label">Wallet</label>
                        <select class="form-select" asp-for="Transaction.WalletId">
                            <option value="">Select Wallet</option>
                            @foreach (var wallet in Model.Wallets)
                            {
                                <option value="@wallet.Id">@wallet.Name</option>
                            }
                        </select>
                    </div>

                    <!-- Amount Input -->
                    <div class="mb-3">
                        <label class="form-label">Amount</label>
                        <div class="input-group">
                            <span class="input-group-text">VND</span>
                            <input type="number" class="form-control" asp-for="Transaction.Amount" placeholder="0" required>
                        </div>
                    </div>

                    <!-- Category Selection -->
                    <div class="mb-3">
                        <label class="form-label">Category</label>
                        <select class="form-select" asp-for="Transaction.Category">
                            <option value="">Select Category</option>
                            <option value="Food">Food</option>
                            <option value="Shopping">Shopping</option>
                            <option value="Transport">Transport</option>
                        </select>
                    </div>

                    <!-- Note -->
                    <div class="mb-3">
                        <label class="form-label">Note</label>
                        <input type="text" class="form-control" asp-for="Transaction.Note" placeholder="Add a note">
                    </div>

                    <!-- Date Selection -->
                    <div class="mb-3">
                        <label class="form-label">Date</label>
                        <input type="date" class="form-control" asp-for="Transaction.Date" required>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary" asp-page-handler="Edit">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>

