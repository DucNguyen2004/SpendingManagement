@page
@model SpendingManagement.Pages.ProfileModel
@{
}
<div class="mt-4 p-4 bg-white shadow-sm rounded text-center">
    <!-- Profile Picture -->
    <img src="" class="rounded-circle mb-3" alt="Profile Picture">

    <!-- User Details -->
    <h4 class="fw-bold">John Doe</h4>
    <p class="text-muted">johndoe@example.com</p>

    <!-- Buttons -->
    <button class="btn btn-primary mt-2">Logout</button>
    <button class="btn btn-warning mt-2" data-bs-toggle="modal" data-bs-target="#changePasswordModal">Change Password</button>
</div>
<!-- Change Password Modal -->
<div class="modal fade" id="changePasswordModal" tabindex="-1" aria-labelledby="changePasswordModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="changePasswordModalLabel">Change Password</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="mb-3">
                        <label for="currentPassword" class="form-label">Current Password</label>
                        <input type="password" class="form-control" id="currentPassword" required>
                    </div>
                    <div class="mb-3">
                        <label for="newPassword" class="form-label">New Password</label>
                        <input type="password" class="form-control" id="newPassword" required>
                    </div>
                    <div class="mb-3">
                        <label for="confirmPassword" class="form-label">Confirm New Password</label>
                        <input type="password" class="form-control" id="confirmPassword" required>
                    </div>
                    <button type="submit" class="btn btn-success w-100">Update Password</button>
                </form>
            </div>
        </div>
    </div>
</div>